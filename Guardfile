# A sample Guardfile
# More info at https://github.com/guard/guard#readme

guard 'sass', :input => 'sass', :output => 'output'
guard :haml, :input => 'haml',:output => "output"

# Any files created or modified in the 'source' directory
# will be copied to the 'target' directory. Update the
# guard as appropriate for your needs.

guard :copy, :from => 'js', :to => 'output'
guard :copy, :from => 'data', :to => 'output'
